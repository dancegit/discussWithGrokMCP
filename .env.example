# Example environment file for Grok MCP Server
# Copy this file to .env and add your actual API key

# Required - Get your API key from https://console.x.ai
XAI_API_KEY=your_api_key_here

# Optional configuration for enhanced server
GROK_MODEL=grok-4-0709
GROK_TEMPERATURE=0.7
GROK_MAX_TOKENS=4096

# Server configuration
MCP_LOG_LEVEL=INFO
MCP_LOG_FILE=enhanced_mcp.log
MCP_ENABLE_STREAMING=false
MCP_ENABLE_CACHING=true
MCP_CACHE_TTL=3600

# Feature flags
ENABLE_SESSIONS=true
ENABLE_CONTEXT=true
ENABLE_RESOURCES=true
ENABLE_HEALTH_CHECK=true

# Storage paths
STORAGE_PATH=./grok_discussions
MAX_CONTEXT_TOKENS=10000
DEFAULT_MAX_ITERATIONS=3